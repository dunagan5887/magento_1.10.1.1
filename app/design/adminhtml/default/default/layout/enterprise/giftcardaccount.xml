<layout>
    <adminhtml_giftcardaccount_index>
        <reference name="content">
            <block type="enterprise_giftcardaccount/adminhtml_giftcardaccount" name="giftcardaccount_list">
                <block type="adminhtml/store_switcher" name="store_switcher" as="store_switcher">
                    <action method="setUseConfirm"><params>0</params></action>
                </block>
            </block>
        </reference>
    </adminhtml_giftcardaccount_index>

    <adminhtml_sales_order_view>
        <reference name="order_totals">
            <block type="adminhtml/sales_order_totals_item" name="giftcardaccount" template="enterprise/giftcardaccount/sales/order/totals/giftcardaccount.phtml">
                <action method="setBeforeCondition"><param>customerbalance</param></action>
            </block>
        </reference>
    </adminhtml_sales_order_view>

    <adminhtml_sales_order_invoice_new>
        <reference name="invoice_totals">
            <block type="adminhtml/sales_order_totals_item" name="giftcardaccount" template="enterprise/giftcardaccount/sales/invoice/totals/giftcardaccount.phtml">
                <action method="setBeforeCondition"><param>customerbalance</param></action>
            </block>
        </reference>
    </adminhtml_sales_order_invoice_new>

    <adminhtml_sales_order_invoice_updateqty>
        <reference name="invoice_totals">
            <block type="adminhtml/sales_order_totals_item" name="giftcardaccount" template="enterprise/giftcardaccount/sales/invoice/totals/giftcardaccount.phtml">
                <action method="setBeforeCondition"><param>customerbalance</param></action>
            </block>
        </reference>
    </adminhtml_sales_order_invoice_updateqty>

    <adminhtml_sales_order_invoice_view>
        <reference name="invoice_totals">
            <block type="adminhtml/sales_order_totals_item" name="giftcardaccount" template="enterprise/giftcardaccount/sales/invoice/totals/giftcardaccount.phtml" />
        </reference>
    </adminhtml_sales_order_invoice_view>



    <adminhtml_sales_order_create_load_block_items>
        <reference name="items_grid">
            <block type="enterprise_giftcardaccount/adminhtml_sales_order_create_payment" template="enterprise/giftcardaccount/sales/order/create/items.phtml" name="giftcardaccount" after="-" />
        </reference>
    </adminhtml_sales_order_create_load_block_items>

    <adminhtml_sales_order_create_load_block_data>
        <reference name="items_grid">
            <block type="enterprise_giftcardaccount/adminhtml_sales_order_create_payment" template="enterprise/giftcardaccount/sales/order/create/items.phtml" name="giftcardaccount" after="-" />
        </reference>
    </adminhtml_sales_order_create_load_block_data>

    <adminhtml_sales_order_create_index>
        <reference name="js">
            <block type="adminhtml/template" template="enterprise/giftcardaccount/sales/order/create/js.phtml" name="giftcardaccount_js" />
        </reference>
        <reference name="items_grid">
            <block type="enterprise_giftcardaccount/adminhtml_sales_order_create_payment" template="enterprise/giftcardaccount/sales/order/create/items.phtml" name="giftcardaccount" after="-" />
        </reference>
    </adminhtml_sales_order_create_index>

    <adminhtml_sales_order_creditmemo_new>
        <reference name="creditmemo_totals">
            <block type="adminhtml/sales_order_totals_item" name="giftcardaccount" template="enterprise/giftcardaccount/sales/creditmemo/totals/giftcardaccount.phtml" after="-">
                <action method="setBeforeCondition"><param>customerbalance</param></action>
            </block>
        </reference>
    </adminhtml_sales_order_creditmemo_new>

    <adminhtml_sales_order_creditmemo_updateqty>
        <reference name="invoice_totals">
            <block type="adminhtml/sales_order_totals_item" name="giftcardaccount" template="enterprise/giftcardaccount/sales/creditmemo/totals/giftcardaccount.phtml" after="-">
                <action method="setBeforeCondition"><param>customerbalance</param></action>
            </block>
        </reference>
    </adminhtml_sales_order_creditmemo_updateqty>

    <adminhtml_sales_order_creditmemo_view>
        <reference name="invoice_totals">
            <block type="adminhtml/sales_order_totals_item" name="giftcardaccount" template="enterprise/giftcardaccount/sales/creditmemo/totals/view.phtml" after="-">
                <action method="setBeforeCondition"><param>customerbalance</param></action>
            </block>
        </reference>
    </adminhtml_sales_order_creditmemo_view>

