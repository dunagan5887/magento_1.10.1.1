<script type="text/javascript">
//<![CDATA[
    i=0;
    var recipCount = 0;
    var maxRecip   = <?php echo $this->getRecipientsLimit() ?>;
    function remove_recipient(i){
        $('recipients_name'+i).up(2).remove();
        recipCount--;
        if(recipCount<maxRecip && maxRecip != 0) {
            $('add_recipient_button').show();
            $('max_recipient_message').hide();
        }
        return false;
    }

    function add_recipient(email, name)
    {
        if (typeof email == 'undefined') email = '';
        if (typeof name == 'undefined') name = '';
        ul = $('recipients_options');
        var li_mail = Element.extend(document.createElement("li"));
        li_mail.addClassName('fields');

        if (i!=0) {
            li_mail.innerHTML = '<p class="btn-remove"><a href="delete_email" onclick="remove_recipient('+i+'); return false" class="btn-remove"><img src="<?php echo $this->getSkinUrl('images/btn_remove.gif') ?>" alt="<?php echo $this->__('Remove Email') ?>" /><\/a><\/p>'
            li_mail.addClassName('add-row');
        }
        li_mail.innerHTML += '<div class="field"><label for="recipients_name'+i+'" class="required"><em>*<\/em> <?php echo $this->__('Name:') ?><\/label><div class="input-box"><input name="recipients['+i+'][name]" type="text" value="'+name+'" class="input-text required-entry" id="recipients_name'+i+'" /><\/div><\/div>';
        li_mail.innerHTML += '<div class="field"><label for="recipients_email'+i+'" class="required"><em>*<\/em> <?php echo $this->__('Email Address:') ?><\/label><div class="input-box"><input name="recipients['+i+'][email]" value="'+email+'" title="<?php echo $this->__('Email Address') ?>" id="recipients_email'+i+'" type="text" class="input-text required-entry validate-email" /><\/div><\/div>';
        i++;
        recipCount++;
        if(recipCount>=maxRecip && maxRecip != 0) {
            $('add_recipient_button').hide();
            $('max_recipient_message').show();
        }

        ul.appendChild(li_mail);
    }
//]]>
</script>

