?>
<div class="page-title">
    <h1><?php echo Mage::helper('enterprise_invitation')->__('My Invitations'); ?></h1>
</div>

<div id="messages"><?php echo $this->getMessagesBlock()->getGroupedHtml() ?></div>

<?php echo $this->getChildHtml('list_before')?>

<?php if (count($this->getInvitationCollection())): ?>

<table class="data-table" id="invitations-list-table" cellpadding="0">
    <col />
    <col width="100" />
    <thead>
        <tr>
            <th>
                <?php echo Mage::helper('enterprise_invitation')->__('Email'); ?>
            </th>
            <th>
                <?php echo Mage::helper('enterprise_invitation')->__('Status'); ?>
            </th>
        </tr>
    </thead>
    <tbody>

    <?php foreach ($this->getInvitationCollection() as $invitation): ?>
        <tr>
            <td>
                <?php echo $this->htmlEscape($invitation->getEmail()); ?>
            </td>
            <td>
                <?php echo $this->helper('enterprise_invitation')->getInvitationStatusText($invitation);?>
            </td>
        </tr>
    <?php endforeach; ?>
    </tbody>
</table>
<script type="text/javascript">decorateTable('invitations-list-table')</script>

<?php else: ?>

<div id="cookie-notice">
    <ul class="messages"><li class="notice-msg">
        <ul><li><?php echo Mage::helper('enterprise_invitation')->__('There are no sent invitations yet'); ?></li></ul>
    </li></ul>
</div>

<?php endif; ?>

<div class="buttons-set">
    <p class="back-link"><a href="<?php echo $this->escapeUrl($this->getBackUrl()) ?>"><small>&laquo; </small><?php echo $this->__('Back') ?></a></p>
    <a href="<?php echo $this->helper('enterprise_invitation')->getCustomerInvitationFormUrl(); ?>" class="button"><span><?php echo $this->__('Send Invitations') ?></span></a>
</div>
