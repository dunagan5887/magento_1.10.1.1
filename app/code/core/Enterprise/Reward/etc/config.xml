<config>
    <modules>
        <Enterprise_Reward>
            <version>1.7.0.0.15</version>
        </Enterprise_Reward>
    </modules>
    <global>
        <models>
            <enterprise_reward>
                <class>Enterprise_Reward_Model</class>
                <resourceModel>enterprise_reward_mysql4</resourceModel>
            </enterprise_reward>
            <enterprise_reward_mysql4>
                <class>Enterprise_Reward_Model_Mysql4</class>
                <entities>
                    <reward>
                        <table>enterprise_reward</table>
                    </reward>
                    <reward_history>
                        <table>enterprise_reward_history</table>
                    </reward_history>
                    <reward_rate>
                        <table>enterprise_reward_rate</table>
                    </reward_rate>
                    <reward_salesrule>
                        <table>enterprise_reward_salesrule</table>
                    </reward_salesrule>
                </entities>
            </enterprise_reward_mysql4>
        </models>
        <resources>
            <enterprise_reward_setup>
                <setup>
                    <module>Enterprise_Reward</module>
                    <class>Enterprise_Reward_Model_Mysql4_Setup</class>
                </setup>
            </enterprise_reward_setup>
        </resources>
        <blocks>
            <enterprise_reward>
                <class>Enterprise_Reward_Block</class>
            </enterprise_reward>
        </blocks>
        <helpers>
            <enterprise_reward>
                <class>Enterprise_Reward_Helper</class>
            </enterprise_reward>
        </helpers>
        <template>
            <email>
                <enterprise_reward_notification_balance_update_template translate="label" module="enterprise_reward">
                    <label>Reward Points Balance Update</label>
                    <file>enterprise/reward_balance_update.html</file>
                    <type>html</type>
                </enterprise_reward_notification_balance_update_template>
                <enterprise_reward_notification_expiry_warning_template translate="label" module="enterprise_reward">
                    <label>Reward Points Expiry Warning</label>
                    <file>enterprise/reward_expiry_warning.html</file>
                    <type>html</type>
                </enterprise_reward_notification_expiry_warning_template>
            </email>
        </template>
        <sales>
            <quote>
                <totals>
                    <reward>
                        <class>enterprise_reward/total_quote_reward</class>
                        <after>wee,discount,tax,tax_subtotal,grand_total</after>
                        <before>giftcardaccount,customerbalance</before>
                        <renderer>enterprise_reward/checkout_total</renderer>
                    </reward>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <reward>
                        <class>enterprise_reward/total_invoice_reward</class>
                    </reward>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <reward>
                        <class>enterprise_reward/total_creditmemo_reward</class>
                    </reward>
                </totals>
            </order_creditmemo>
        </sales>
        <fieldsets>
            <sales_convert_quote_address>
                <reward_points_balance><to_order>*</to_order></reward_points_balance>
                <reward_currency_amount><to_order>*</to_order></reward_currency_amount>
                <base_reward_currency_amount><to_order>*</to_order></base_reward_currency_amount>
            </sales_convert_quote_address>
        </fieldsets>
        <events>
            <newsletter_subscriber_save_commit_after>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>customerSubscribed</method>
                    </enterprise_reward>
                </observers>
            </newsletter_subscriber_save_commit_after>
            <paypal_prepare_line_items>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>addPaypalRewardItem</method>
                    </enterprise_reward>
                </observers>
            </paypal_prepare_line_items>
            <sales_order_save_after>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>orderCompleted</method>
                    </enterprise_reward>
                </observers>
            </sales_order_save_after>
            <sales_quote_collect_totals_before>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>quoteCollectTotalsBefore</method>
                    </enterprise_reward>
                </observers>
            </sales_quote_collect_totals_before>
            <sales_quote_merge_after>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>quoteMergeAfter</method>
                    </enterprise_reward>
                </observers>
            </sales_quote_merge_after>
            <sales_order_load_after>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>orderLoadAfter</method>
                    </enterprise_reward>
                </observers>
            </sales_order_load_after>
            <sales_order_invoice_register>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>invoiceRegister</method>
                    </enterprise_reward>
                </observers>
            </sales_order_invoice_register>
            <sales_order_invoice_save_commit_after>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>applyRewardSalesrulePoints</method>
                    </enterprise_reward>
                </observers>
            </sales_order_invoice_save_commit_after>
            <sales_order_creditmemo_refund>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>creditmemoRefund</method>
                    </enterprise_reward>
                </observers>
            </sales_order_creditmemo_refund>
            <sales_order_creditmemo_save_after>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>creditmemoSaveAfter</method>
                    </enterprise_reward>
                </observers>
            </sales_order_creditmemo_save_after>
            <sales_model_service_quote_submit_before>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>processOrderPlace</method>
                    </enterprise_reward>
                </observers>
            </sales_model_service_quote_submit_before>
            <sales_model_service_quote_submit_failure>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>revertRewardPoints</method>
                    </enterprise_reward>
                </observers>
            </sales_model_service_quote_submit_failure>
            <checkout_type_multishipping_create_orders_single>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>processOrderPlace</method>
                    </enterprise_reward>
                </observers>
            </checkout_type_multishipping_create_orders_single>
            <checkout_multishipping_refund_all>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>revertRewardPointsForAllOrders</method>
                    </enterprise_reward>
                </observers>
            </checkout_multishipping_refund_all>
        </events>
        <pdf>
            <totals>
                <reward translate="title">
                    <title>Reward Points</title>
                    <source_field>reward_currency_amount</source_field>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>650</sort_order>
                    <amount_prefix>-</amount_prefix>
                </reward>
            </totals>
        </pdf>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <reward before="Mage_Adminhtml">Enterprise_Reward_Adminhtml</reward>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <enterprise_reward>
                    <file>enterprise/reward.xml</file>
                </enterprise_reward>
            </updates>
        </layout>
        <translate>
            <modules>
                <Enterprise_Reward>
                    <files>
                        <default>Enterprise_Reward.csv</default>
                    </files>
                </Enterprise_Reward>
            </modules>
        </translate>
        <events>
            <core_layout_update_updates_get_after>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>disableLayout</method>
                    </enterprise_reward>
                </observers>
            </core_layout_update_updates_get_after>
            <adminhtml_customer_prepare_save>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>saveRewardNotifications</method>
                    </enterprise_reward>
                </observers>
            </adminhtml_customer_prepare_save>
            <adminhtml_customer_save_after>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>saveRewardPoints</method>
                    </enterprise_reward>
                </observers>
            </adminhtml_customer_save_after>
            <review_save_commit_after>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>reviewSubmit</method>
                    </enterprise_reward>
                </observers>
            </review_save_commit_after>
            <tag_save_commit_after>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>tagSubmit</method>
                    </enterprise_reward>
                </observers>
            </tag_save_commit_after>
            <adminhtml_sales_order_create_process_data>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>processOrderCreationData</method>
                    </enterprise_reward>
                </observers>
            </adminhtml_sales_order_create_process_data>
            <adminhtml_sales_order_creditmemo_register_before>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>setRewardPointsBalanceToRefund</method>
                    </enterprise_reward>
                </observers>
            </adminhtml_sales_order_creditmemo_register_before>
            <website_delete_after>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>prepareCustomerOrphanPoints</method>
                    </enterprise_reward>
                </observers>
            </website_delete_after>
            <adminhtml_block_salesrule_actions_prepareform>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>prepareSalesruleForm</method>
                    </enterprise_reward>
                </observers>
            </adminhtml_block_salesrule_actions_prepareform>
            <salesrule_rule_load_after>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>loadRewardSalesruleData</method>
                    </enterprise_reward>
                </observers>
            </salesrule_rule_load_after>
            <salesrule_rule_save_after>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>saveRewardSalesruleData</method>
                    </enterprise_reward>
                </observers>
            </salesrule_rule_save_after>
            <order_cancel_after>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>returnRewardPoints</method>
                    </enterprise_reward>
                </observers>
            </order_cancel_after>
            <payment_method_is_active>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>preparePaymentMethod</method>
                    </enterprise_reward>
                </observers>
            </payment_method_is_active>
        </events>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <enterprise_reward>
                    <file>reward.xml</file>
                </enterprise_reward>
            </updates>
        </layout>
        <translate>
            <modules>
                <Enterprise_Reward>
                    <files>
                        <default>Enterprise_Reward.csv</default>
                    </files>
                </Enterprise_Reward>
            </modules>
        </translate>
        <routers>
            <enterprise_reward>
                <use>standard</use>
                <args>
                    <module>Enterprise_Reward</module>
                    <frontName>reward</frontName>
                </args>
            </enterprise_reward>
        </routers>
        <events>
            <customer_session_init>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>checkRates</method>
                    </enterprise_reward>
                </observers>
            </customer_session_init>
            <customer_save_after>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>customerRegister</method>
                    </enterprise_reward>
                </observers>
            </customer_save_after>
            <payment_method_is_active>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>preparePaymentMethod</method>
                    </enterprise_reward>
                </observers>
            </payment_method_is_active>
            <sales_quote_payment_import_data_before>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>paymentDataImport</method>
                    </enterprise_reward>
                </observers>
            </sales_quote_payment_import_data_before>
            <enterprise_invitation_save_commit_after>
                <observers>
                    <enterprise_reward>
                        <class>enterprise_reward/observer</class>
                        <method>invitationToCustomer</method>
                    </enterprise_reward>
                </observers>
            </enterprise_invitation_save_commit_after>
        </events>
    </frontend>
    <default>
        <enterprise_reward>
            <general>
                <is_enabled>1</is_enabled>
                <is_enabled_on_front>1</is_enabled_on_front>
                <publish_history>1</publish_history>
                <expiry_calculation>static</expiry_calculation>
                <landing_page>reward-points</landing_page>
            </general>
            <notification>
                <email_sender>general</email_sender>
                <subscribe_by_default>1</subscribe_by_default>
                <balance_update_template>enterprise_reward_notification_balance_update_template</balance_update_template>
                <expiry_warning_template>enterprise_reward_notification_expiry_warning_template</expiry_warning_template>
            </notification>
        </enterprise_reward>
        <sales>
            <totals_sort>
                <reward>80</reward>
            </totals_sort>
        </sales>
    </default>
    <crontab>
        <jobs>
            <enterprise_reward_balance_warning_notification>
                <schedule><cron_expr>1 * * * *</cron_expr></schedule>
                <run><model>enterprise_reward/observer::scheduledBalanceExpireNotification</model></run>
            </enterprise_reward_balance_warning_notification>
            <enterprise_reward_expire_points>
                <schedule><cron_expr>1 * * * *</cron_expr></schedule>
                <run><model>enterprise_reward/observer::scheduledPointsExpiration</model></run>
            </enterprise_reward_expire_points>
        </jobs>
    </crontab>
</config>
