<config>
    <modules>
        <Enterprise_Banner>
             <version>1.6.0.0.4</version>
        </Enterprise_Banner>
    </modules>

    <global>
        <models>
             <enterprise_banner>
                <class>Enterprise_Banner_Model</class>
                <resourceModel>enterprise_banner_mysql4</resourceModel>
             </enterprise_banner>
             <enterprise_banner_mysql4>
                <class>Enterprise_Banner_Model_Mysql4</class>
                <entities>
                    <banner><table>enterprise_banner</table></banner>
                    <content><table>enterprise_banner_content</table></content>
                    <customersegment><table>enterprise_banner_customersegment</table></customersegment>
                    <catalogrule><table>enterprise_banner_catalogrule</table></catalogrule>
                    <salesrule><table>enterprise_banner_salesrule</table></salesrule>
                </entities>
            </enterprise_banner_mysql4>
        </models>
        <helpers>
            <enterprise_banner>
                <class>Enterprise_Banner_Helper</class>
            </enterprise_banner>
        </helpers>
        <blocks>
             <enterprise_banner>
                <class>Enterprise_Banner_Block</class>
             </enterprise_banner>
        </blocks>
        <resources>
            <enterprise_banner_setup>
                <setup>
                    <module>Enterprise_Banner</module>
                    <class>Enterprise_Banner_Model_Mysql4_Setup</class>
                </setup>
            </enterprise_banner_setup>
        </resources>
        <enterprise>
            <banner>
                <types translate="content footer header leftcol rightcol">
                    <content>Content Area</content>
                    <footer>Footer</footer>
                    <header>Header</header>
                    <leftcol>Left Column</leftcol>
                    <rightcol>Right Column</rightcol>
                </types>
            </banner>
        </enterprise>
    </global>

    <admin>
         <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_banner before="Mage_Adminhtml">Enterprise_Banner_Adminhtml</enterprise_banner>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <enterprise_banner>
                    <file>enterprise/banner.xml</file>
                </enterprise_banner>
            </updates>
        </layout>

        <translate>
            <modules>
                <Enterprise_Banner>
                    <files>
                        <default>Enterprise_Banner.csv</default>
                    </files>
                </Enterprise_Banner>
            </modules>
        </translate>
        <events>
            <adminhtml_controller_catalogrule_prepare_save>
                <observers>
                    <enterprise_banner>
                        <class>enterprise_banner/observer</class>
                        <method>prepareCatalogRuleSave</method>
                    </enterprise_banner>
                </observers>
            </adminhtml_controller_catalogrule_prepare_save>
            <catalogrule_rule_save_after>
                <observers>
                    <enterprise_banner>
                        <class>enterprise_banner/observer</class>
                        <method>bindRelatedBannersToCatalogRule</method>
                    </enterprise_banner>
                </observers>
            </catalogrule_rule_save_after>
            <adminhtml_controller_salesrule_prepare_save>
                <observers>
                    <enterprise_banner>
                        <class>enterprise_banner/observer</class>
                        <method>prepareSalesRuleSave</method>
                    </enterprise_banner>
                </observers>
            </adminhtml_controller_salesrule_prepare_save>
            <salesrule_rule_save_after>
                <observers>
                    <enterprise_banner>
                        <class>enterprise_banner/observer</class>
                        <method>bindRelatedBannersToSalesRule</method>
                    </enterprise_banner>
                </observers>
            </salesrule_rule_save_after>
        </events>
    </adminhtml>
</config>
