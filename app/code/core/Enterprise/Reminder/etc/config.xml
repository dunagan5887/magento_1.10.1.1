<config>
    <modules>
        <Enterprise_Reminder>
             <version>1.8.0.0.0</version>
        </Enterprise_Reminder>
    </modules>
    <global>
        <models>
             <enterprise_reminder>
                <class>Enterprise_Reminder_Model</class>
                <resourceModel>enterprise_reminder_mysql4</resourceModel>
             </enterprise_reminder>
             <enterprise_reminder_mysql4>
                <class>Enterprise_Reminder_Model_Mysql4</class>
                <entities>
                    <rule><table>enterprise_reminder_rule</table></rule>
                    <website><table>enterprise_reminder_rule_website</table></website>
                    <template><table>enterprise_reminder_template</table></template>
                    <coupon><table>enterprise_reminder_rule_coupon</table></coupon>
                    <log><table>enterprise_reminder_rule_log</table></log>
                </entities>
            </enterprise_reminder_mysql4>
        </models>
        <helpers>
            <enterprise_reminder>
                <class>Enterprise_Reminder_Helper</class>
            </enterprise_reminder>
        </helpers>
        <blocks>
             <enterprise_reminder>
                <class>Enterprise_Reminder_Block</class>
             </enterprise_reminder>
        </blocks>
        <resources>
            <enterprise_reminder_setup>
                <setup>
                    <module>Enterprise_Reminder</module>
                    <class>Enterprise_Reminder_Model_Mysql4_Setup</class>
                </setup>
            </enterprise_reminder_setup>
        </resources>
        <template>
            <email>
               <enterprise_reminder_email_template translate="label" module="enterprise_reminder">
                   <label>Rule Reminder</label>
                   <file>enterprise/reminder.html</file>
                   <type>html</type>
               </enterprise_reminder_email_template>
            </email>
        </template>
        <events>
            <salesrule_rule_get_coupon_types>
                <observers>
                    <enterprise_reminder>
                        <class>enterprise_reminder/observer</class>
                        <method>getCouponTypes</method>
                    </enterprise_reminder>
                </observers>
            </salesrule_rule_get_coupon_types>
            <adminhtml_promo_quote_edit_tab_main_prepare_form>
                <observers>
                    <enterprise_reminder>
                        <class>enterprise_reminder/observer</class>
                        <method>updatePromoQuoteTabMainForm</method>
                    </enterprise_reminder>
                </observers>
            </adminhtml_promo_quote_edit_tab_main_prepare_form>
        </events>
    </global>

    <admin>
         <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_reminder before="Mage_Adminhtml">Enterprise_Reminder_Adminhtml</enterprise_reminder>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <enterprise_reminder>
                    <file>enterprise/reminder.xml</file>
                </enterprise_reminder>
            </updates>
        </layout>

        <translate>
            <modules>
                <Enterprise_Reminder>
                    <files>
                        <default>Enterprise_Reminder.csv</default>
                    </files>
                </Enterprise_Reminder>
            </modules>
        </translate>
    </adminhtml>

    <default>
        <promo>
            <enterprise_reminder>
                <enabled>1</enabled>
                <frequency>I</frequency>
                <interval>15</interval>
                <minutes>0</minutes>
                <limit>100</limit>
                <threshold>1</threshold>
                <identity>general</identity>
            </enterprise_reminder>
        </promo>
    </default>

    <crontab>
        <jobs>
            <send_notification>
                <run><model>enterprise_reminder/observer::scheduledNotification</model></run>
            </send_notification>
        </jobs>
    </crontab>
</config>
