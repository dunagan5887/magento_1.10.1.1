<config>
    <modules>
        <Enterprise_PageCache>
             <version>1.6.0.0.0</version>
        </Enterprise_PageCache>
    </modules>
    <global>
        <models>
            <enterprise_pagecache>
                <class>Enterprise_PageCache_Model</class>
                <resourceModel>enterprise_pagecache_mysql4</resourceModel>
            </enterprise_pagecache>
            <enterprise_pagecache_mysql4>
                <class>Enterprise_PageCache_Model_Mysql4</class>
            </enterprise_pagecache_mysql4>
        </models>
        <blocks>
            <enterprise_pagecache>
                <class>Enterprise_PageCache_Block</class>
            </enterprise_pagecache>
        </blocks>
        <helpers>
            <enterprise_pagecache>
                <class>Enterprise_PageCache_Helper</class>
            </enterprise_pagecache>
        </helpers>
        <resources>
            <enterprise_pagecache_setup>
                <setup><module>Enterprise_PageCache</module></setup>
            </enterprise_pagecache_setup>
        </resources>
        <cache>
            <types>
                <full_page translate="label,description" module="enterprise_pagecache">
                    <label>Page Cache</label>
                    <description>Full page caching.</description>
                    <tags>FPC</tags>
                </full_page>
            </types>
        </cache>
        <ignore_user_agents>
            <cache_crawler>MagentoCrawler</cache_crawler>
        </ignore_user_agents>
        <widget>
            <related_cache_types>
                <full_page/>
            </related_cache_types>
        </widget>
    </global>
    <adminhtml>
        <events>
            <clean_media_cache_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>cleanCache</method>
                    </enterprise_pagecache>
                </observers>
            </clean_media_cache_after>
            <clean_catalog_images_cache_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>cleanCache</method>
                    </enterprise_pagecache>
                </observers>
            </clean_catalog_images_cache_after>
            <model_save_commit_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>validateDataChanges</method>
                    </enterprise_pagecache>
                </observers>
            </model_save_commit_after>
            <model_delete_commit_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>validateDataDelete</method>
                    </enterprise_pagecache>
                </observers>
            </model_delete_commit_after>
            <controller_action_postdispatch_adminhtml_system_config_save>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>invalidateCache</method>
                    </enterprise_pagecache>
                </observers>
            </controller_action_postdispatch_adminhtml_system_config_save>
            <controller_action_postdispatch_adminhtml_catalog_product_action_attribute_save>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>invalidateCache</method>
                    </enterprise_pagecache>
                </observers>
            </controller_action_postdispatch_adminhtml_catalog_product_action_attribute_save>
            <controller_action_postdispatch_adminhtml_catalog_product_massStatus>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>invalidateCache</method>
                    </enterprise_pagecache>
                </observers>
            </controller_action_postdispatch_adminhtml_catalog_product_massStatus>
            <catalogrule_after_apply>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>cleanCache</method>
                    </enterprise_pagecache>
                </observers>
            </catalogrule_after_apply>
            <core_config_backend_design_exception_save_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerDesignExceptionsChange</method>
                    </enterprise_pagecache>
                </observers>
            </core_config_backend_design_exception_save_after>

        </events>
    </adminhtml>
    <frontend>
        <routers>
            <enterprise_pagecache>
                <use>standard</use>
                <args>
                    <module>Enterprise_PageCache</module>
                    <frontName>pagecache</frontName>
                </args>
            </enterprise_pagecache>
        </routers>
        <events>
            <model_load_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerModelTag</method>
                    </enterprise_pagecache>
                </observers>
            </model_load_after>
            <controller_action_predispatch>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>processPreDispatch</method>
                    </enterprise_pagecache>
                </observers>
            </controller_action_predispatch>
            <controller_action_postdispatch_catalog_product_view>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>checkProductState</method>
                    </enterprise_pagecache>
                </observers>
            </controller_action_postdispatch_catalog_product_view>
            <controller_action_postdispatch_catalog_category_view>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>checkCategoryState</method>
                    </enterprise_pagecache>
                </observers>
            </controller_action_postdispatch_catalog_category_view>
            <controller_front_send_response_before>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>cacheResponse</method>
                    </enterprise_pagecache>
                </observers>
            </controller_front_send_response_before>
            <core_block_abstract_to_html_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>renderBlockPlaceholder</method>
                    </enterprise_pagecache>
                </observers>
            </core_block_abstract_to_html_after>
            <customer_login>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>customerLogin</method>
                    </enterprise_pagecache>
                </observers>
            </customer_login>
            <customer_logout>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>customerLogout</method>
                    </enterprise_pagecache>
                </observers>
            </customer_logout>
            <sales_quote_save_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerQuoteChange</method>
                    </enterprise_pagecache>
                </observers>
            </sales_quote_save_after>
            <sales_quote_remove_item>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerQuoteChange</method>
                    </enterprise_pagecache>
                </observers>
            </sales_quote_remove_item>
            <catalog_product_compare_add_product>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerCompareListChange</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_product_compare_add_product>
            <catalog_product_compare_remove_product>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerCompareListChange</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_product_compare_remove_product>
            <catalog_product_compare_item_collection_clear>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerCompareListChange</method>
                    </enterprise_pagecache>
                </observers>
            </catalog_product_compare_item_collection_clear>
            <core_session_abstract_add_message>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>processNewMessage</method>
                    </enterprise_pagecache>
                </observers>
            </core_session_abstract_add_message>
            <core_session_abstract_clear_messages>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>processMessageClearing</method>
                    </enterprise_pagecache>
                </observers>
            </core_session_abstract_clear_messages>
            <wishlist_add_product>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerWishlistChange</method>
                    </enterprise_pagecache>
                </observers>
            </wishlist_add_product>
            <wishlist_item_delete_commit_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerWishlistChange</method>
                    </enterprise_pagecache>
                </observers>
            </wishlist_item_delete_commit_after>
            <sales_order_place_after>
                <observers>
                    <enterprise_pagecache>
                        <class>enterprise_pagecache/observer</class>
                        <method>registerNewOrder</method>
                    </enterprise_pagecache>
                </observers>
            </sales_order_place_after>

        </events>
        <cache>
            <requests>
                <!--
                    Supported definitions:
                    <module_front_name>processor_model</module_front_name> - all module urls
                    <module_front_name><controller>processor_model</controller></module_front_name> - all module controller actions
                    <module_front_name><controller><action>processor_model</action></controller></module_front_name> - specific action
                 -->
                <cms>enterprise_pagecache/processor_default</cms>
                <catalog><category><view>enterprise_pagecache/processor_category</view></category></catalog>
                <catalog><product><view>enterprise_pagecache/processor_product</view></product></catalog>
            </requests>
        </cache>
    </frontend>
    <default>
        <system>
            <page_cache>
                <allowed_depth>1</allowed_depth>
                <multicurrency>1</multicurrency>
                <max_cache_size>1024</max_cache_size>
            </page_cache>
            <page_crawl>
                <enable>0</enable>
                <threads>1</threads>
                <multicurrency>1</multicurrency>
            </page_crawl>
        </system>
        
        <dev>
            <translate_inline>
                <invalid_caches>
                    <full_page/>
                </invalid_caches>
            </translate_inline>
        </dev>
    </default>
    <crontab>
        <jobs>
            <enterprise_page_cache_crawler>
                <schedule><cron_expr>0 3 * * *</cron_expr></schedule>
                <run><model>enterprise_pagecache/crawler::crawl</model></run>
            </enterprise_page_cache_crawler>
        </jobs>
    </crontab>
</config>
