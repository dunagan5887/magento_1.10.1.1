<config>
    <modules>
        <Enterprise_Checkout>
            <version>1.8.0.0.0</version>
        </Enterprise_Checkout>
    </modules>
    <global>
        <models>
            <enterprise_checkout>
                <class>Enterprise_Checkout_Model</class>
            </enterprise_checkout>
        </models>
        <blocks>
            <enterprise_checkout>
                <class>Enterprise_Checkout_Block</class>
            </enterprise_checkout>
        </blocks>
        <helpers>
            <enterprise_checkout>
                <class>Enterprise_Checkout_Helper</class>
            </enterprise_checkout>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_checkout before="Mage_Adminhtml">Enterprise_Checkout_Adminhtml</enterprise_checkout>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <enterprise_checkout>
                    <file>enterprise/checkout.xml</file>
                </enterprise_checkout>
            </updates>
        </layout>
        <translate>
            <modules>
                <Enterprise_Checkout>
                    <files>
                        <default>Enterprise_Checkout.csv</default>
                    </files>
                </Enterprise_Checkout>
            </modules>
        </translate>
    </adminhtml>
</config>
