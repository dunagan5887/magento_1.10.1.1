<widgets>
    <enterprise_giftregistry_search type="enterprise_giftregistry/search_widget_form" translate="name description" module="enterprise_giftregistry">
        <name>Gift Registry Search</name>
        <description>Gift Registry Quick Search Form</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <types translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Quick Search Form Types</label>
                <type>multiselect</type>
                <source_model>enterprise_giftregistry/source_search</source_model>
            </types>
            <template>
                <values>
                    <default_template translate="label">
                        <label>Default Template</label>
                        <value>giftregistry/search/widget/form.phtml</value>
                    </default_template>
                </values>
            </template>
        </parameters>
        <supported_blocks>
            <left_column>
                <block_name>left</block_name>
                <template>
                    <default>default_template</default>
                </template>
            </left_column>
            <!--main_content>
                <block_name>content</block_name>
                <template>
                    <default>default_template</default>
                </template>
            </main_content-->
            <right_column>
                <block_name>right</block_name>
                <template>
                    <default>default_template</default>
                </template>
            </right_column>
        </supported_blocks>
    </enterprise_giftregistry_search>
</widgets>
