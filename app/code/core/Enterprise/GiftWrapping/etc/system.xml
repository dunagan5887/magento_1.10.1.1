<config>
    <sections>
        <sales>
            <groups>
                <gift_options>
                    <fields>
                        <wrapping_allow_order translate="label" module="enterprise_giftwrapping">
                            <label>Allow Gift Wrapping on Order Level</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </wrapping_allow_order>
                        <wrapping_allow_items translate="label" module="enterprise_giftwrapping">
                            <label>Allow Gift Wrapping for Order Items</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </wrapping_allow_items>
                        <allow_gift_receipt translate="label" module="enterprise_giftwrapping">
                            <label>Allow Gift Receipt</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </allow_gift_receipt>
                        <allow_printed_card translate="label" module="enterprise_giftwrapping">
                            <label>Allow Printed Card</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </allow_printed_card>
                        <printed_card_price translate="label" module="enterprise_giftwrapping">
                            <label>Default Price for Printed Card</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </printed_card_price>
                    </fields>
                </gift_options>
            </groups>
        </sales>
        <tax>
            <groups>
                <classes>
                    <fields>
                        <wrapping_tax_class translate="label" module="enterprise_giftwrapping">
                            <label>Tax Class for Gift Options</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_shipping_taxclass</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </wrapping_tax_class>
                    </fields>
                </classes>
                <cart_display>
                    <fields>
                        <gift_wrapping translate="label" module="enterprise_giftwrapping">
                            <label>Display Gift Wrapping Prices</label>
                            <frontend_type>select</frontend_type>
                            <source_model>tax/system_config_source_tax_display_type</source_model>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </gift_wrapping>
                        <printed_card translate="label" module="enterprise_giftwrapping">
                            <label>Display Printed Card Prices</label>
                            <frontend_type>select</frontend_type>
                            <source_model>tax/system_config_source_tax_display_type</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </printed_card>
                    </fields>
                </cart_display>
                <sales_display>
                    <fields>
                        <gift_wrapping translate="label" module="enterprise_giftwrapping">
                            <label>Display Gift Wrapping Prices</label>
                            <frontend_type>select</frontend_type>
                            <source_model>tax/system_config_source_tax_display_type</source_model>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </gift_wrapping>
                        <printed_card translate="label" module="enterprise_giftwrapping">
                            <label>Display Printed Card Prices</label>
                            <frontend_type>select</frontend_type>
                            <source_model>tax/system_config_source_tax_display_type</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </printed_card>
                    </fields>
                </sales_display>
            </groups>
        </tax>
    </sections>
</config>
