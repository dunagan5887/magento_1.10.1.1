<config>
    <modules>
        <Enterprise_License>
            <version>1.7.0.0.0</version>
        </Enterprise_License>
    </modules>

    <global>
        <models>
            <enterprise_license>
                <class>Enterprise_License_Model</class>
            </enterprise_license>
        </models>
        <blocks>
             <enterprise_license>
                <class>Enterprise_License_Block</class>
             </enterprise_license>
        </blocks>
        <helpers>
            <enterprise_license>
                <class>Enterprise_License_Helper</class>
            </enterprise_license>
        </helpers>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <Enterprise_License>
                    <files>
                        <default>Enterprise_License.csv</default>
                    </files>
                </Enterprise_License>
            </modules>
        </translate>
        <layout>
            <updates>
                <enterprise_license>
                    <file>enterprise/license.xml</file>
                </enterprise_license>
            </updates>
        </layout>
        <events>
            <admin_user_authenticate_after>
                <observers>
                    <enterprise_license>
                        <class>enterprise_license/observer</class>
                        <method>adminUserAuthenticateAfter</method>
                    </enterprise_license>
                </observers>
            </admin_user_authenticate_after>
            <controller_action_predispatch>
                <observers>
                    <enterprise_license>
                        <class>enterprise_license/observer</class>
                        <method>preDispatch</method>
                    </enterprise_license>
                </observers>
            </controller_action_predispatch>
        </events>
        
    </adminhtml>
</config>
