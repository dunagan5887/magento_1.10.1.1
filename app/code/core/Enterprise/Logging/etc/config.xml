<config>
    <modules>
        <Enterprise_Logging>
            <version>0.2.3</version>
        </Enterprise_Logging>
    </modules>
    <global>
        <models>
            <enterprise_logging_mysql4>
                <class>Enterprise_Logging_Model_Mysql4</class>
                <entities>
                    <event>
                        <table>enterprise_logging_event</table>
                    </event>
                    <event_changes>
                        <table>enterprise_logging_event_changes</table>
                    </event_changes>
                </entities>
            </enterprise_logging_mysql4>
            <enterprise_logging>
                <class>Enterprise_Logging_Model</class>
                <resourceModel>enterprise_logging_mysql4</resourceModel>
            </enterprise_logging>
        </models>
        <blocks>
            <enterprise_logging>
                <class>Enterprise_Logging_Block</class>
            </enterprise_logging>
        </blocks>
        <helpers>
            <enterprise_logging>
                <class>Enterprise_Logging_Helper</class>
            </enterprise_logging>
        </helpers>
        <resources>
            <enterprise_logging_setup>
                <setup>
                    <module>Enterprise_Logging</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </enterprise_logging_setup>
        </resources>
    </global>
    <adminhtml>
        <events>
            <controller_action_predispatch>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>controllerPredispatch</method>
                    </enterprise_logging>
                </observers>
            </controller_action_predispatch>

            <controller_action_postdispatch_adminhtml>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>controllerPostdispatch</method>
                    </enterprise_logging>
                </observers>
            </controller_action_postdispatch_adminhtml>

            <model_save_after>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>modelSaveAfter</method>
                    </enterprise_logging>
                </observers>
            </model_save_after>

            <model_delete_after>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>modelDeleteAfter</method>
                    </enterprise_logging>
                </observers>
            </model_delete_after>

            <model_load_after>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>modelLoadAfter</method>
                    </enterprise_logging>
                </observers>
            </model_load_after>

            <admin_session_user_login_success>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>adminSessionLoginSuccess</method>
                    </enterprise_logging>
                </observers>
            </admin_session_user_login_success>

            <admin_session_user_login_failed>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>adminSessionLoginFailed</method>
                    </enterprise_logging>
                </observers>
            </admin_session_user_login_failed>
        </events>
        <layout>
            <updates>
                <events>
                    <file>enterprise/logging.xml</file>
                </events>
            </updates>
        </layout>
        <translate>
            <modules>
                <Enterprise_Logging>
                    <files>
                        <default>Enterprise_Logging.csv</default>
                    </files>
                </Enterprise_Logging>
            </modules>
        </translate>
        <enterprise>
            <logging>
                <skip_fields>updated_at,form_key</skip_fields>
                <!--Coma separated list of fields that should not be logged for all models-->
            </logging>
        </enterprise>
    </adminhtml>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Enterprise_Logging before="Mage_Adminhtml">Enterprise_Logging_Adminhtml</Enterprise_Logging>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <default>
        <system>
            <rotation translate="frequency">
                <frequency>1</frequency>
                <lifetime>60</lifetime>
            </rotation>
        </system>
    </default>

    <crontab>
        <jobs>
            <enterprise_logging_rotate_logs>
                <schedule><cron_expr>1 2 * * *</cron_expr></schedule>
                <run><model>enterprise_logging/observer::rotateLogs</model></run>
            </enterprise_logging_rotate_logs>
        </jobs>
    </crontab>

</config>
