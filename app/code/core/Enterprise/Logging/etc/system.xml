<config>
    <sections>
        <system>
            <tab>advanced</tab>
            <groups>
                <rotation translate="label">
                    <label>Admin Actions Log Archiving</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>500</sort_order>
                    <fields>
                        <lifetime translate="label">
                            <label>Log Entry Lifetime, Days</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </lifetime>
                        <frequency translate="label">
                            <label>Log Archiving Frequency</label>
                            <frontend_type>select</frontend_type>
                            <source_model>enterprise_logging/source_frequency</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </frequency>
                    </fields>
                </rotation>
            </groups>
        </system>
        <admin>
            <tab>advanced</tab>
            <groups>
                <enterprise_logging translate="label">
                    <label>Admin Actions Logging</label>
                    <show_in_default>1</show_in_default>
                    <sort_order>500</sort_order>
                    <sort_fields>
                        <by>label</by>
                    </sort_fields>
                    <fields>
                        <actions translate="label">
                            <label>Enabled Actions</label>
                            <frontend_model>enterprise_logging/adminhtml_system_config_actions</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <show_in_default>1</show_in_default>
                        </actions>
                    </fields>
                </enterprise_logging>
            </groups>
        </admin>
    </sections>
</config>
