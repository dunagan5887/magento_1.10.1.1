<config>
    <modules>
        <Enterprise_Pci>
             <version>0.0.4</version>
        </Enterprise_Pci>
    </modules>
    <global>
        <models>
            <enterprise_pci>
                <class>Enterprise_Pci_Model</class>
                <resourceModel>enterprise_pci_mysql4</resourceModel>
            </enterprise_pci>
            <enterprise_pci_mysql4>
                <class>Enterprise_Pci_Model_Mysql4</class>
                <entities>
                    <admin_passwords>
                        <table>enterprise_admin_passwords</table>
                    </admin_passwords>
                </entities>
            </enterprise_pci_mysql4>
        </models>
        <blocks>
            <enterprise_pci>
                <class>Enterprise_Pci_Block</class>
            </enterprise_pci>
        </blocks>
        <helpers>
            <enterprise_pci>
                <class>Enterprise_Pci_Helper</class>
            </enterprise_pci>
            <core>
                <encryption_model>Enterprise_Pci_Model_Encryption</encryption_model>
            </core>
        </helpers>
        <resources>
            <enterprise_pci_setup>
                <setup>
                    <module>Enterprise_Pci</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </enterprise_pci_setup>
        </resources>
        <events>
            <admin_user_save_before>
                <observers>
                    <enterprise_pci>
                        <class>enterprise_pci/observer</class>
                        <method>checkAdminPasswordChange</method>
                    </enterprise_pci>
                </observers>
            </admin_user_save_before>
            <admin_user_save_after>
                <observers>
                    <enterprise_pci>
                        <class>enterprise_pci/observer</class>
                        <method>trackAdminNewPassword</method>
                    </enterprise_pci>
                </observers>
            </admin_user_save_after>
        </events>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <enterprise_pci>
                    <file>enterprise/pci.xml</file>
                </enterprise_pci>
            </updates>
        </layout>
        <events>
            <admin_user_authenticate_after>
                <observers>
                    <enterprise_pci>
                        <class>enterprise_pci/observer</class>
                        <method>adminAuthenticate</method>
                    </enterprise_pci>
                </observers>
            </admin_user_authenticate_after>
            <api_user_authenticated>
                <observers>
                    <enterprise_pci>
                        <class>enterprise_pci/observer</class>
                        <method>upgradeApiKey</method>
                    </enterprise_pci>
                </observers>
            </api_user_authenticated>
            <controller_action_predispatch>
                <observers>
                    <enterprise_pci>
                        <class>enterprise_pci/observer</class>
                        <method>forceAdminPasswordChange</method>
                    </enterprise_pci>
                </observers>
            </controller_action_predispatch>
        </events>
        <translate>
            <modules>
                <Enterprise_Pci>
                    <files>
                        <default>Enterprise_Pci.csv</default>
                    </files>
                </Enterprise_Pci>
            </modules>
        </translate>        
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Enterprise_Pci before="Mage_Adminhtml">Enterprise_Pci_Adminhtml</Enterprise_Pci>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <events>
            <customer_customer_authenticated>
                <observers>
                    <enterprise_pci>
                        <class>enterprise_pci/observer</class>
                        <method>upgradeCustomerPassword</method>
                    </enterprise_pci>
                </observers>
            </customer_customer_authenticated>
        </events>
        <translate>
            <modules>
                <Enterprise_Pci>
                    <files>
                        <default>Enterprise_Pci.csv</default>
                    </files>
                </Enterprise_Pci>
            </modules>
        </translate>        
    </frontend>
    <default>
        <admin>
            <security>
                <session_cookie_lifetime>900</session_cookie_lifetime>
                <lockout_failures>6</lockout_failures>
                <lockout_threshold>30</lockout_threshold>
                <password_lifetime>90</password_lifetime>
                <password_is_forced>1</password_is_forced>
            </security>
        </admin>
    </default>
</config>
